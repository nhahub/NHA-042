@model Online_Medical.ViewModel.ClinicListViewModel

@{
    ViewData["Title"] = "إدارة العيادات";
}

<h2 class="text-primary"><i class="fas fa-list-alt"></i> قائمة العيادات</h2>
<hr />

@Html.AntiForgeryToken()

<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Clinics.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.Clinics.First().AddressSummary)</th>
            <th>@Html.DisplayNameFor(model => model.Clinics.First().Phone)</th>
            <th>عدد الأطباء</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clinics)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.AddressSummary)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.DoctorsCount)</td>
                <td>
                    <a asp-action="ClinicDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a asp-action="ClinicEdit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <button type="button" class="btn btn-danger btn-sm" onclick="confirmDeleteClinic('@item.Id', '@item.Name')">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="CreateClinic" class="btn btn-success"><i class="fas fa-plus"></i> ADD a new clinic</a>
</p>


@section Scripts {
    <script>
        function confirmDeleteClinic(id, name) {
            if (confirm(`هل أنت متأكد من حذف العيادة: ${name}؟`)) {
                // إنشاء نموذج ديناميكي وإرسال طلب POST
                var form = document.createElement("form");
                form.method = "post";
                form.action = "@Url.Action("ClinicDelete", "Admin")";

                var idField = document.createElement("input");
                idField.type = "hidden";
                idField.name = "id";
                idField.value = id;
                form.appendChild(idField);

                // إضافة رمز منع التزوير (Anti-Forgery Token)
                var token = document.querySelector('input[name="__RequestVerificationToken"]').cloneNode();
                form.appendChild(token);

                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}