 *@model List<Online_Medical.ViewModel.AdminPatientViewModel>
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery

@{
    // نحتاج هذا لعمل رسالة تأكيد الحذف
    var tokens = Antiforgery.GetAndStoreTokens(Context);
}

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Phone Number</th>
             <th>Join Date</th>
            <th>Total Appointments</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.JoinDate.ToShortDateString()</td>
                <td>@item.TotalAppointments</td>
                <td>
                    <a asp-controller="Admin" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        Details
                    </a>
                    
                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        Edit
                    </a>
                    
                    <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.Id', '@item.Username', '@tokens.RequestToken')">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
<script>
    function confirmDelete(userId, userName, requestToken) {
        if (confirm("هل أنت متأكد من حذف المريض: " + userName + "؟ سيتم حذف جميع بياناته.")) {
            // إنشاء Form مؤقت وإرساله إلى دالة Delete في AdminController
            var form = document.createElement("form");
            form.method = "post";
            form.action = '@Url.Action("Delete", "Admin")';

            // إضافة الـID كحقل مخفي
            var idInput = document.createElement("input");
            idInput.type = "hidden";
            idInput.name = "id";
            idInput.value = userId;
            form.appendChild(idInput);

            // إضافة الـAntiForgeryToken (مهم جداً)
            var tokenInput = document.createElement("input");
            tokenInput.type = "hidden";
            tokenInput.name = "__RequestVerificationToken";
            tokenInput.value = requestToken;
            form.appendChild(tokenInput);

            document.body.appendChild(form);
            form.submit();
        }
    }
</script>
}