@model Online_Medical.ViewModel.ClinicCreateViewModel

@{
    ViewData["Title"] = "create new clinic";
}

<div class="container mt-4">
    <h2 class="text-primary"><i class="fas fa-clinic-medical"></i> إنشاء عيادة جديدة</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="CreateClinic" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <h3>بيانات العيادة الأساسية</h3>
                <hr class="mt-1" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Street" class="control-label"></label>
                        <input asp-for="Street" class="form-control" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="BuildingNumber" class="control-label"></label>
                        <input asp-for="BuildingNumber" class="form-control" />
                        <span asp-validation-for="BuildingNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Region" class="control-label"></label>
                        <input asp-for="Region" class="form-control" />
                        <span asp-validation-for="Region" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <h3 class="mt-4">ربط الأطباء (اختياري)</h3>
                <hr class="mt-1" />

                <div class="form-group mb-4">
                    <label asp-for="DoctorIdentifiersInput" class="control-label"></label>
                    <textarea asp-for="DoctorIdentifiersInput" class="form-control" rows="4"
                              placeholder="أدخل إيميل أو يوزرنيم كل طبيب في سطر منفصل، أو افصلهم بفاصلة. هذا الحقل اختياري."></textarea>
                    <small class="form-text text-muted">سيتم تجاهل المعرفات غير الصحيحة أو التي لا تخص أطباء.</small>
                    <span asp-validation-for="DoctorIdentifiersInput" class="text-danger"></span>
                </div>


                <div class="form-group mt-4 text-end">
                    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
                    <input type="submit" value="إنشاء العيادة" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
