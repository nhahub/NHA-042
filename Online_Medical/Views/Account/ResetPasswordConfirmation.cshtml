@* File: /Views/Account/ResetPasswordConfirmation.cshtml *@
@{
    Layout = null;
    ViewData["Title"] = "Password Reset Done";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Medical</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <style>
                :root {
                        --primary-color: #2b98e1;
                        --text-color: #333;
                        --box-bg: rgba(255, 255, 255, 0.2); 
                        --glass-border: 1px solid rgba(255, 255, 255, 0.3);
                        --border-radius: 20px;
                        --success-color: #198754; 
        }
                * {
                        margin: 0;
                        padding: 0;
                        box-sizing: border-box;
                        font-family: Arial, sans-serif;
        }
                body {
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        min-height: 100vh;
                        background-image: url('/assets/img/background2.png');
                        background-size: cover;
                        background-position: center;
                        background-repeat: no-repeat;
        }
                .main-wrapper {
                        display: flex;
                        width: 90%;
                        max-width: 1200px;
                        align-items: center;
                        justify-content: space-between;
        }
                .promo-text {
                        flex-basis: 45%;
                        padding-right: 20px;
        }
                .main-heading {
                        font-size: 4.5rem;
                        font-weight: 800;
                        line-height: 1.1;
                        color: #333;
                        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }
                .highlight {
                        color: var(--primary-color);
                        font-weight: 800;
        }
                .confirmation-box {
                        flex-basis: 50%;
                        max-width: 500px;
                        padding: 50px 40px;
                        background: var(--box-bg);
                        border-radius: var(--border-radius);
                        backdrop-filter: blur(10px);
                        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
                        border: var(--glass-border);
                        text-align: center;
        }
                .confirmation-icon {
                        font-size: 3.5rem;
                        color: var(--success-color);
                        margin-bottom: 20px;
                        text-shadow: 0 0 10px rgba(25, 135, 84, 0.3);
        }
                .confirmation-title {
                        font-size: 2.5rem;
                        font-weight: 700;
                        color: var(--text-color);
                        margin-bottom: 10px;
        }
                .confirmation-message {
                        font-size: 1.15rem;
                        color: var(--text-color);
                        margin-bottom: 30px;
                        line-height: 1.6;
        }
                hr {
                        border: 0;
                        height: 1px;
                        background-color: rgba(51, 51, 51, 0.2);
                        margin: 25px 0;
        }
                .login-btn {
                        padding: 12px 40px;
                        background-color: var(--primary-color);
                        color: white;
                        border: none;
                        border-radius: 10px;
                        font-size: 1.1rem;
                        font-weight: 600;
                        cursor: pointer;
                        transition: background-color 0.3s, transform 0.1s;
                        text-decoration: none;
                        display: inline-block;
        }
                    .login-btn:hover {
                            background-color: #217bb4;
                            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="main-wrapper">
        <div class="promo-text">
            <h1 class="main-heading">
                Password <br />
                <span class="highlight">Updated</span>
            </h1>
        </div>
        <div class="confirmation-box">
            <i class="fas fa-check-circle confirmation-icon"></i>
            <h2 class="confirmation-title">
                Done!
            </h2>
            <p class="confirmation-message">
                Your password has been **reset successfully**. You can now log in with your new password securely.
            </p>
            <hr />
            <a asp-action="Login" asp-controller="Account" class="login-btn">
                Go to Login
            </a>
        </div>
    </div>
</body>
</html>