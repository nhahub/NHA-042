@model Online_Medical.ViewModel.ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Reset Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Medical</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <style>
        /* تهيئة عامة للتصميم الجديد (مطابقة للصفحات السابقة) */
                :root {
                        --primary-color: #2b98e1; /* اللون الأزرق المميز */
                        --text-color: #333;
                        --box-bg: rgba(255, 255, 255, 0.2); /* خلفية بيضاء شفافة للصندوق */
                        --glass-border: 1px solid rgba(255, 255, 255, 0.3);
                        --border-radius: 20px;
        }
                * {
                        margin: 0;
                        padding: 0;
                        box-sizing: border-box;
                        font-family: Arial, sans-serif;
        }
                body {
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        min-height: 100vh;
                        background-image: url('/assets/img/background2.png');
                        background-size: cover;
                        background-position: center;
                        background-repeat: no-repeat;
        }
                .main-wrapper {
                        display: flex;
                        width: 90%;
                        max-width: 1200px;
                        align-items: center;
                        justify-content: space-between;
        }
        /* -------------------- قسم النص الترويجي -------------------- */
                .promo-text {
                        flex-basis: 45%;
                        padding-right: 20px;
        }
                .main-heading {
                        font-size: 4.5rem;
                        font-weight: 800;
                        line-height: 1.1;
                        color: #333;
                        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }
                .highlight {
                        color: var(--primary-color);
                        font-weight: 800;
        }
        /* -------------------- صندوق إعادة تعيين كلمة المرور (Glassmorphism) -------------------- */
                .reset-box {
                        flex-basis: 50%;
                        max-width: 500px;
                        padding: 40px;
                        background: var(--box-bg);
                        border-radius: var(--border-radius);
                        backdrop-filter: blur(10px);
                        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
                        border: var(--glass-border);
        }
                .reset-title {
                        font-size: 2.2rem;
                        font-weight: 600;
                        margin-bottom: 30px;
                        color: var(--text-color);
                        text-align: center;
        }
                    .reset-title .fas {
                            color: var(--primary-color);
                            margin-right: 10px;
            }
                .reset-form {
                        display: flex;
                        flex-direction: column;
                        gap: 25px;
        }
        /* تنسيق الحقل الموحد */
                .form-field-group {
                        position: relative;
                        margin-bottom: 20px;
        }
        /* تنسيق المدخلات */
                input[type="password"] {
                        width: 100%;
                        padding: 15px 15px 15px 45px; /* مساحة لليسار للأيقونة */
                        border: 1px solid #ccc;
                        border-radius: 10px;
                        font-size: 1rem;
                        color: var(--text-color);
                        background-color: rgba(255, 255, 255, 0.9);
                        transition: border-color 0.3s, box-shadow 0.3s;
                        line-height: normal;
        }
                    input:focus {
                            border-color: var(--primary-color);
                            outline: none;
                            box-shadow: 0 0 8px rgba(43, 152, 225, 0.5);
        }
        /* الأيقونات داخل الحقول */
                .form-field-group .icon {
                        position: absolute;
                        top: 50%;
                        left: 15px;
                        transform: translateY(-50%);
                        color: #999;
                        pointer-events: none;
        }
        /* رسائل التحقق من الصحة (Validation Messages) */
                .text-danger {
                        font-size: 0.9rem;
                        color: #dc3545;
                        display: block;
                        margin-top: 5px;
                        text-align: left;
        }
                .form-field-group .text-danger {
                        position: absolute;
                        bottom: -20px;
                        left: 0;
        }
        /* زر الإرسال */
                .reset-btn {
                        padding: 12px 30px;
                        margin-top: 15px;
                        background-color: var(--primary-color);
                        color: white;
                        border: none;
                        border-radius: 10px;
                        font-size: 1.1rem;
                        font-weight: 600;
                        cursor: pointer;
                        transition: background-color 0.3s, transform 0.1s;
                        width: 100%;
        }
                    .reset-btn:hover {
                            background-color: #217bb4;
                            transform: translateY(-2px);
        }
        /* إخفاء الـ Labels حيث أننا نستخدم الـ Placeholder/Input Focus Effect */
                .control-label {
                        display: none;
        }
        /* تنسيق ملخص الأخطاء */
                .validation-summary-errors {
                        background-color: #f8d7da;
                        color: #721c24;
                        border: 1px solid #f5c6cb;
                        border-radius: 10px;
                        padding: 15px;
                        margin-bottom: 20px;
                        font-size: 0.95rem;
                        text-align: left;
        }
                    .validation-summary-errors ul {
                            list-style-type: none;
                            padding: 0;
                            margin: 0;
        }
    </style>
</head>
<body>
    <div class="main-wrapper">
        <div class="promo-text">
            <h1 class="main-heading">
                Security <br />
                <span class="highlight">First</span>
            </h1>
        </div>
        <div class="reset-box">
            <h2 class="reset-title"><i class="fas fa-key"></i> SET NEW PASSWORD</h2>
            <form asp-action="ResetPassword" method="post" class="reset-form">
                <div asp-validation-summary="All" class="text-danger validation-summary-errors" role="alert" style="display:none;"></div>
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Token" />
                <div class="form-field-group">
                    <label class="control-label" asp-for="Password">New Password</label>
                    <i class="fas fa-lock icon"></i>
                    <input asp-for="Password" type="password" placeholder="New Password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-field-group">
                    <label class="control-label" asp-for="ConfirmPassword">Confirm Password</label>
                    <i class="fas fa-lock icon"></i>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="reset-btn">
                    Reset Password
                </button>
            </form>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Show validation summary only if there are errors (after server-side validation)
            if ($(".validation-summary-errors ul li").length > 0) {
                $(".validation-summary-errors").show();
            }
        });
    </script>
</body>
</html>