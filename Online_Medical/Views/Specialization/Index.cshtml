@model List<specializationGetAllViewModel>

@{
    ViewData["Title"] = "Specializations";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Specializations List</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>SR</th>
                <th>Specialization Name</th>
                <th>Description</th>
                <th>Doctors</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td>@counter</td> 
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td class="text-wrap" style="max-width: 250px;">
                        @if (item.Doctors != null && item.Doctors.Any())
                        {
                            @foreach (var doc in item.Doctors)
                            {
                                <a asp-controller="Doctors"
                                   asp-action="Details"
                                   asp-route-id="@doc.Id"
                                   class="badge bg-info text-dark me-1 text-decoration-none">
                                    @doc.ApplicationUser?.FirstName @doc.ApplicationUser?.LastName
                                </a>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No Doctors</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this specialization?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
                counter++; // Increment after each row
            }

        </tbody>
    </table>
</div>
